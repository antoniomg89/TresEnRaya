<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:orientation="vertical"
    tools:context=".TableroJ2">

    <LinearLayout
        android:id="@+id/layout_Login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewdir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dirección de correo"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/textCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contraseña"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="buttonSignUpEvent"
                android:text="Sign up " />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="buttonSignInEvent"
                android:text="Sign in" />

        </LinearLayout>







    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/resultado_layoutj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/direccion_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />



            <TextView
                android:id="@+id/resultadoj2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>


        <TableRow
            android:id="@+id/c1j2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/button11j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button12j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button13j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>


        <TableRow
            android:id="@+id/c2j2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/button21j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button22j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button23j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/c3j2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/button31j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button32j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button33j2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border10"
                android:clickable="false"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <Button
                android:id="@+id/buttonComenzarj2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:visibility="gone"
                android:background="@drawable/border2"
                android:text="Comenzar" />

        </LinearLayout>

    </TableLayout>

</LinearLayout>
